# Server configuration
LOG_LEVEL=info

# AI Provider Configuration

# Default AI provider (options: openai, anthropic, gemini, local, template)
DEFAULT_AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# Local LLM Configuration (Ollama, LM Studio, etc.)
LOCAL_MODEL_API_URL=http://localhost:11434/api
LOCAL_MODEL_NAME=llama3

# Database configuration (for storing templates)
DB_PATH=./data/prd-creator.db
